<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="ridery_vehicle_res_partner_inherit_form" model="ir.ui.view">
            <field name="name">ridery_vehicle_res_partner_inherit_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button
                        name="partner_vehicles_smart_button"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-external-link"
                        string="Vehicles"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>